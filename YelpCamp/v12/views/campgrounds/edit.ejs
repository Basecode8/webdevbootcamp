<% include ../partials/header %>

<div class="container">
 <div class="row">
  <h1 style="width: 100%; text-align: center">Edit <%= campground.name %></h1>
  
  <div style="width: 30%; margin: 25px auto">
   <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
     <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>"></input>
    </div>
    <div class="form-group">
     <input class="form-control" name="campground[price]" type="number" placeholder="<%= campground.price %>" min="0.01" step="0.01"></input>
    </div>
    <div class="form-group">
     <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>"></input>
    </div>
    <div class="form-group">
     <input class="form-control" name="campground[description]" type="text" value="<%= campground.description %>"></input>
    </div>
    <div class="form-group">
     <button class="btn btn-primary btn-lg btn-block">Submit!</button>
    </div>
   </form>
   
   <a href="/campgrounds">Go Back</a>
  </div>
 </div>
</div>

<% include ../partials/footer %>