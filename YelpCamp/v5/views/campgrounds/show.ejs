<% include ../partials/header %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
   <p class="lead">YelpCamp</p>
   <div class="list-group">
    <li class="list-group-item active">Item 1</li>
    <li class="list-group-item">Item 2</li>
    <li class="list-group-item">Item 3</li>
   </div>
  </div>
  
  <div class="col-md-9">
   <div class="card">
    <img class="card-img-top w-100" src="<%= campground.image %>" alt="Card image cap">
    <div class="card-body">
     <h4 class="card-subtitle text-muted float-md-right">$9.00/night</h4>
     <h4 class="card-title"><a href="#"><%= campground.name %></a></h4>
     <p class="card-text"><%= campground.description %></p>
    </div>
    <div class="card-footer muted">
     <div class="d-inline-block w-100">
      <div class="float-right">
       <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add New Comment</a>
      </div>
     </div>
     <hr>
     <% campground.comments.forEach(function(comment){ %>
      <div class="row">
       <div class="col-md-12">
        <strong><%= comment.author %></strong>
        <span class="float-right">10 days ago</span>
        <p>
         <%= comment.text %>
        </p>
       </div>
      </div>
     <% }) %>
    </div>
   </div>
   

  </div>
 </div>
</div>




<% include ../partials/footer %>