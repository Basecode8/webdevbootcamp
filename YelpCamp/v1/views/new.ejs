<% include partials/header %>

<div class="container">
 <div class="row">
  <h1 style="width: 100%; text-align: center">Create a new campground</h1>
  
  <div style="width: 30%; margin: 25px auto">
   <form action="/campgrounds" method="POST">
    <div class="form-group">
     <input class="form-control" name="name" type="text" placeholder="name"></input>
    </div>
    <div class="form-group">
     <input class="form-control" name="image" type="text" placeholder="image url"></input>
    </div>
    <div class="form-group">
     <button class="btn btn-primary btn-lg btn-block">Submit!</button>
    </div>
   </form>
   
   <a href="/campgrounds">Go Back</a>
  </div>
 </div>
</div>

